<h1>Listing books</h1>

<%= link_to 'New book', new_book_path %>
<table>
  <tr>
    <th>ISBN</th>
    <th>Shelf</th>
    <th colspan="2"></th>
  </tr>

  <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= link_to book.shelf.id, shelf_path(book.shelf) %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

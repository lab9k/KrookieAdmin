<nav>
  <div class="container">
    <a class="logo" href="/">
      <div class="logo-wrapper">
        <img src="/images/Krookie-Red.svg">
        <p>Admin</p>
      </div>
    </a>
    <ul>
      <a><li><%= link_to 'Home', welcome_index_path %></li></a>
      <a><li><%= link_to 'Shelves', shelves_path %></li></a>
      <a><li><%= link_to 'Books', books_path %></li></a>
    </ul>
  </div>
</nav>
<div class="container">
  <h1>Listing books</h1>

  <div class="btn"><%= link_to 'New book', new_book_path %></div>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>ISBN</th>
        <th>Shelf</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.isbn %></td>
            <td><%= link_to "Shelf #{book.shelf.id}", shelf_path(book.shelf) %></td>
            <td><div class="btn"><%= link_to 'Show', book_path(book) %></div></td>
            <td><div class="btn"><%= link_to 'Edit', edit_book_path(book) %></div></td>
            <td><div class="btn"><%= link_to 'Destroy', book_path(book),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %></div></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

